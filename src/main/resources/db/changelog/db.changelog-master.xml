<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="b55189fb-2c26-44c7-9f46-0b1fa87616c1" author="mathan">
        <insert tableName="task">
            <column name="id" value="1"/>
            <column name="title" value="Task 1"/>
            <column name="description" value="This is the first task"/>
            <column name="status" value="Pending"/>
        </insert>
    </changeSet>

    <changeSet id="235c9705-254b-443f-a144-af7b917df98f" author="mathan">
        <insert tableName="task">
            <column name="id" value="2"/>
            <column name="title" value="Task 2"/>
            <column name="description" value="This is the second task"/>
            <column name="status" value="Completed"/>
        </insert>
    </changeSet>

    <changeSet id="e245b08e-5be6-403a-961c-3663e50021ec" author="mathan">
        <delete tableName="task">
            <where>CAST(id AS INTEGER) = 1</where>
        </delete>
    </changeSet>

    <changeSet id="61c00130-dc71-4b17-a352-07d40b5bee09" author="mathan">
        <update tableName="task">
            <column name="status" value="pending"/> <!-- Update the status column -->
            <where>CAST(id AS INTEGER) = 2</where> <!-- Specify the id to update -->
        </update>
    </changeSet>


</databaseChangeLog>
